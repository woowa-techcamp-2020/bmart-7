generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id
  userId    String
  email     String?
  phone     String?
  address   String?
  createdAt DateTime?  @default(now())
  cartItems CartItem[]
  favorites Favorite[]
  orders    Order[]
}

model MainCategory {
  id         Int        @default(autoincrement()) @id
  title      String
  sectionId  Int
  isMain     Int        @default(0)
  imageUrl   String?    @default("")
  section    Section    @relation(fields: [sectionId], references: [id])
  categories Category[]

  @@index([sectionId], name: "sectionId_idx")
}

model Product {
  id          Int         @default(autoincrement()) @id
  title       String
  categoryId  Int?
  originPrice Int
  salePrice   Int
  salePercent Int?
  isMain      Int         @default(0)
  hit         Int         @default(0)
  amount      Int         @default(0)
  createdAt   DateTime    @default(now())
  description String?
  mainImage   String      @default("")
  bannerImage String      @default("")
  category    Category?   @relation(fields: [categoryId], references: [id])
  cartItems   CartItem[]
  favorites   Favorite[]
  orderItems  OrderItem[]

  @@index([categoryId], name: "categoryId_idx")
}

model Section {
  id             Int            @default(autoincrement()) @id
  title          String
  mainCategories MainCategory[]
}

model Category {
  id             Int          @default(autoincrement()) @id
  title          String
  mainCategoryId Int
  mainCategory   MainCategory @relation(fields: [mainCategoryId], references: [id])
  products       Product[]

  @@index([mainCategoryId], name: "mainCategoryId_idx")
}

model Favorite {
  id        Int     @default(autoincrement()) @id
  productId Int
  userId    Int
  product   Product @relation(fields: [productId], references: [id])
  user      User    @relation(fields: [userId], references: [id])

  @@index([productId], name: "productId")
  @@index([userId], name: "userId_idx")
}

model CartItem {
  id        Int     @default(autoincrement()) @id
  count     Int     @default(1)
  productId Int
  userId    Int
  product   Product @relation(fields: [productId], references: [id])
  user      User    @relation(fields: [userId], references: [id])

  @@index([productId], name: "productId_idx")
  @@index([userId], name: "user_idx")
}

model Order {
  id         Int         @default(autoincrement()) @id
  userId     Int
  user       User        @relation(fields: [userId], references: [id])
  orderItems OrderItem[]

  @@index([userId], name: "userId_idx")
}

model OrderItem {
  id        Int     @default(autoincrement()) @id
  count     Int     @default(1)
  productId Int
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId], name: "oid_idx")
  @@index([productId], name: "pid_idx")
}
